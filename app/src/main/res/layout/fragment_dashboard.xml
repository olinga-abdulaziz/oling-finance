<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/ic_wavetop"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/myAccountIcon"
            android:layout_width="wrap_content"
            android:text="My Account"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:drawablePadding="16dp"
            android:textSize="20sp"
            android:drawableStart="@drawable/ic_baseline_me"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_me">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMyAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_me"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="My Account"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdmin"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_admin_panel_settings"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:gravity="center_horizontal">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGroup"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_group"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Group Account"
                        android:gravity="center_horizontal">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="199dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardACcount"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_accounts"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Accounts"
                        android:gravity="center_horizontal">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="161dp">
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTransaction"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_trans"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:gravity="center_horizontal">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLoan"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="81dp"
                        android:src="@drawable/ic_baseline_loan"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Loan"
                        android:gravity="center_horizontal">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_waveottom">
        </ImageView>
    </LinearLayout>
</LinearLayout>