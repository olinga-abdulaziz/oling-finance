<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewAccountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YOUR GROUP NAME"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp">
                    </TextView>

                    <EditText
                        android:id="@+id/edtGroupName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#E5E5EF"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:hint="Group name">
                    </EditText>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="62dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:text="GROUP ID:">
                        </TextView>
                        <TextView
                            android:id="@+id/grId"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:text="785G">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="20dp"
                    android:text="YOUR PERSONAL INFO"
                    android:textSize="25sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="34dp"
                    android:gravity="center_horizontal"
                    android:text="Provide your correct personal information to register in the group you just created"
                    android:textAlignment="center"></TextView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:paddingRight="10dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Enter Full Names"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Account number"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="ID number"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Phone number"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="email"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Group"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Group ID"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Password"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <EditText
                        android:paddingLeft="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:hint="Confirm Password"
                        android:drawableStart="@drawable/ic_baseline_me"
                        android:drawablePadding="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:background="#F6ECE6"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_baseline_me">
                    </EditText>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="30dp"
                        android:layout_height="match_parent">
                        <Button
                            android:layout_width="120dp"
                            android:layout_marginLeft="30dp"
                            android:text="Cancel"
                            android:layout_height="50dp">
                        </Button>
                        <Button
                            android:layout_marginLeft="60dp"
                            android:layout_width="120dp"
                            android:text="Save"
                            android:layout_height="50dp">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>