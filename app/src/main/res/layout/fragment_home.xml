<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:background="@drawable/ic_wavetop">
        <ImageView
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_marginLeft="340dp"
            android:src="@drawable/ic_baseline_logout">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginLeft="336dp"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="91dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="22dp"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="ROIKO IVESTMET HUB">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="GROUP SUMMARY"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:padding="5sp"
                android:background="#40CF25"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="TOTAL GROUP">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="2000000"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#40CF25"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="SH."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="199dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:padding="5dp"
                android:background="#259FCF"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="MEMBERS">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="120"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#259FCF"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="People"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:padding="5sp"
                android:background="#FFA000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="PERSONALS">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="120000"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#FF8C00"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="SH."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="199dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:padding="5sp"
                android:background="#E64A19"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="BANK BALANCE">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:text="4500000"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#E64A19"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="SH."
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/ic_waveottom">
        </ImageView>
    </RelativeLayout>
</LinearLayout>